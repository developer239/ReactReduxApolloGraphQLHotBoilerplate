{
  "parser": "babel-eslint",
  "extends": [
    "@strv/javascript/environments/react/v16",
    "@strv/javascript/environments/react/v15"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/webpack.common.js"
      }
    }
  },
  "rules": {
    "max-classes-per-file": 0
  },
  "globals": {
    "require": true,
    "process": true,
    "module": true,
    "__dirname": true
  }
}
